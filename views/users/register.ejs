          <input type="text" class="input" placeholder="a" name="adress" required>
          <label for="" class="label">Dirección</label>
        </div>

        <div class="inputContainer">
          <input type="text" class="input" placeholder="a" name="email" required>
          <label for="" class="label">Email</label>
        </div>

        <div class="inputContainer">
          <input type="password" class="input" placeholder="a" name="password" required>
          <label for="" class="label">Contraseña</label>
        </div>
        <div class="Contenedor">
          <input href="/" type="submit" class="cuentasBtn" id="inicio" value="Inicio">
          <input href="#" type="submit" class="cuentasBtn" id="crear" value="Crear">
