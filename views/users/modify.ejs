
        <!-- Head -->
        <%- include('../partials/head') %> 

  <link rel="stylesheet" href="/css/cuentas.css">
  <link rel="stylesheet" href="/css/UserList.css">
  <title>Modificar usuario</title>
</head>

<body>

    <!-- Header -->
    <%- include('../partials/header') %> 

  <main>
    <div class="signupFrm">

      <form action="/users/userList/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="form">
        <h1 class="title">Modificar usuario</h1>

        <% if(locals.errors?.firstName) { %>
          <strong><%= errors.firstName.msg %></strong>
        <% } %>

        <div class="inputContainer">
          <input type="text" class="input" placeholder="a" name="name" value="<%= user.name%>">
          <label for="" class="label">Nombre</label>
        </div>

        <% if(locals.errors?.email) { %>
          <strong><%= errors.email.msg %></strong>
      <% } %> 
        <div class="inputContainer">
          <input type="text" class="input" placeholder="a" name="email" value="<%= user.email%>">
          <label for="" class="label">Email</label>
        </div>
        <div class="inputContainer">
          <label for="roles_id" class="label">Seleccione Categorias</label>
          <select name="roles_id" id="role" class="form-input" required>
              <option value="">Seleccione categorias</option>
              <option value="1" <%= user.roles_id == 1 ? "selected" : "" %>>Administrador</option>
              <option value="2" <%= user.roles_id == 2 ? "selected" : "" %>>Usuario</option>
          </select>
      </div>
        
        <div class="imgForm inputContainer">
          <h4 class="label" id="profile">Imagen</h4>
          <div class="img">
              <input type="file" name="avatar">
          </div>
          <div class="sample">
              <img src="/images/users/<%=user.avatar %>">
          </div>
      </div>       
        <div class="Contenedor">
          <a href="/" class="cuentasBtn" id="inicio">Volver al inicio</a>
          <input type="submit" class="cuentasBtn" value="Cambiar usuario">
        </div>
      </form>
    </div>
  </main>

    <!-- Footer -->
    <%- include('../partials/footer') %> 