
        <!-- Head -->
        <%- include('../partials/head') %> 
    
    <link rel="stylesheet" href="/css/productDetail.css">
    <title>Detalle de producto</title>

</head>

<body>
    <!-- Header -->
    <%- include('../partials/header') %> 

    <main>
        <section class="productImages">
            <img src="/images/products/<%= product.img1 %>" alt="firstImage" class="first">
            <div>
                <% if (product.img2 != null) {%> 
                <img src="/images/products/<%= product.img2 %>">
                <% } %> 
                <% if (product.img3 != null) {%> 
                    <img src="/images/products/<%= product.img3 %>">
                    <% } %> 
            </div>
        </section>

        <section class="detail">
            <h4><%= product.producto %> </h4>
            <h3>$<%= product.precio %> </h3>

            <form action="/productDetail" method="GET">
                <% if (product.tipo2 != null) { %> 
                <legend>Por favor seleccione una opción:</legend>
                <div class="typeSelection">

                    <label for="option1">
                        <input type="radio" name="options" id="option1" required>
                        <%= product.tipo1 %>
                    </label>
                    <label for="option2">
                        <input type="radio" name="options" id="option2">
                        <%= product.tipo2 %>
                    </label>
                    <% } %> 
                    <% if (product.tipo3 != null){%>
                        <label for="option3">
                            <input type="radio" name="options" id="option3">
                            <%= product.tipo3 %>
                        </label>
                    <% } %> 
                </div>


                <div class="quantitySelection">
                    <label for="products">
                        ¿Cuántas unidades vas a llevar?
                        <input type="number" id="products" min="1" value="1" />
                    </label>
                    <button type="submit">Agregar al carrito</button>
                </div>

                
            </form>


            <div class="description">
                <h4>Descripción del producto.</h4>
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                    Obcaecati pariatur esse maiores qui quaerat quisquam, debitis molestias
                    itaque consequuntur perferendis ipsam nemo asperiores voluptas omnis.</p>
            </div>
        </section>


    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %> 